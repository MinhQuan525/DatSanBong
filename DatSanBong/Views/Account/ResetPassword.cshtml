@model dynamic
@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    :root {
        --primary: #2563eb;
        --primary-dark: #1e40af;
        --secondary: #0ea5e9;
        --accent: #06b6d4;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
    }

    /* ===============================================
       CONTAINER
    =============================================== */
    * {
        box-sizing: border-box;
    }

    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-x: hidden;
    }

    body {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        position: relative;
    }

    body::before {
        content: '';
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background-image: 
            radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        animation: float 20s ease-in-out infinite;
        pointer-events: none;
        z-index: 0;
    }

    @@keyframes float {
        0%, 100% { transform: translate(0px, 0px) rotate(0deg); }
        33% { transform: translate(30px, -30px) rotate(120deg); }
        66% { transform: translate(-20px, 20px) rotate(240deg); }
    }

    .reset-container {
        width: 100%;
        max-width: 480px;
        padding: 20px;
        z-index: 10;
    }

    /* ===============================================
       CARD
    =============================================== */
    .reset-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        box-shadow:
            0 25px 45px rgba(0, 0, 0, 0.1),
            0 10px 20px rgba(0, 0, 0, 0.05);
        padding: 40px;
        animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(60px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===============================================
       HEADER
    =============================================== */
    .reset-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .reset-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: white;
        font-size: 36px;
        box-shadow: 0 8px 24px rgba(37, 99, 235, 0.25);
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .reset-title {
        color: #1e293b;
        font-weight: 800;
        font-size: 1.75rem;
        margin: 0 0 8px 0;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .reset-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
        margin: 0;
        line-height: 1.6;
    }

    /* ===============================================
       FORM
    =============================================== */
    .form-section {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        color: #475569;
        font-weight: 600;
        font-size: 0.9375rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-label i {
        color: var(--primary);
    }

    .form-label .required {
        color: var(--danger);
    }

    .password-input-wrapper {
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 14px 48px 14px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 0.9375rem;
        background: #f8fafc;
        transition: all 0.3s ease;
        outline: none;
    }

    .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        background: white;
    }

    .form-control::placeholder {
        color: #94a3b8;
    }

    .toggle-password {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #94a3b8;
        cursor: pointer;
        padding: 8px;
        font-size: 1.125rem;
        transition: all 0.2s ease;
    }

    .toggle-password:hover {
        color: var(--primary);
    }

    .form-hint {
        font-size: 0.8125rem;
        color: #94a3b8;
        margin-top: 6px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .form-hint i {
        color: var(--warning);
    }

    /* ===============================================
       PASSWORD STRENGTH
    =============================================== */
    .password-strength {
        margin-top: 12px;
    }

    .strength-label {
        font-size: 0.8125rem;
        font-weight: 600;
        color: #64748b;
        margin-bottom: 6px;
    }

    .strength-bar {
        height: 4px;
        background: #e2e8f0;
        border-radius: 2px;
        overflow: hidden;
    }

    .strength-fill {
        height: 100%;
        width: 0%;
        transition: all 0.3s ease;
    }

    .strength-weak { width: 33%; background: var(--danger); }
    .strength-medium { width: 66%; background: var(--warning); }
    .strength-strong { width: 100%; background: var(--success); }

    .strength-text {
        font-size: 0.75rem;
        margin-top: 4px;
        font-weight: 600;
    }

    /* ===============================================
       PASSWORD REQUIREMENTS
    =============================================== */
    .password-requirements {
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(14, 165, 233, 0.05));
        border-radius: 12px;
        padding: 16px;
        margin-top: 16px;
    }

    .requirements-title {
        font-size: 0.875rem;
        font-weight: 700;
        color: #475569;
        margin-bottom: 12px;
    }

    .requirement-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.8125rem;
        color: #64748b;
        margin-bottom: 6px;
    }

    .requirement-item:last-child {
        margin-bottom: 0;
    }

    .requirement-item i {
        font-size: 0.875rem;
        color: #cbd5e1;
    }

    .requirement-item.met i {
        color: var(--success);
    }

    /* ===============================================
       BUTTONS
    =============================================== */
    .btn-reset {
        width: 100%;
        padding: 16px 24px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 24px 0 16px 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
    }

    .btn-reset:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 99, 235, 0.35);
    }

    .btn-reset:active {
        transform: translateY(0);
    }

    .btn-reset:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .login-link {
        text-align: center;
        margin-top: 16px;
        color: #64748b;
        font-size: 0.9375rem;
    }

    .login-link a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 700;
        transition: all 0.3s ease;
    }

    .login-link a:hover {
        color: var(--secondary);
    }

    /* ===============================================
       ALERTS
    =============================================== */
    .alert {
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
        border: none;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: slideInDown 0.4s ease-out;
    }

    .alert i {
        font-size: 1.25rem;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #065f46;
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #991b1b;
        border-left: 4px solid var(--danger);
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border-left: 4px solid var(--danger);
        color: #991b1b;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 20px;
    }

    .validation-summary-errors li {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .text-danger {
        color: var(--danger);
        font-size: 0.8125rem;
        margin-top: 6px;
        font-weight: 600;
    }

    /* ===============================================
       RESPONSIVE
    =============================================== */
    @@media (max-width: 540px) {
        .reset-container {
            padding: 15px;
        }

        .reset-card {
            padding: 30px 24px;
        }

        .reset-title {
            font-size: 1.5rem;
        }

        .reset-icon {
            width: 70px;
            height: 70px;
            font-size: 32px;
        }
    }
</style>

<div class="reset-container">
    <div class="reset-card">
        <!-- Header -->
        <div class="reset-header">
            <div class="reset-icon">
                <i class="fas fa-key"></i>
            </div>
            <h1 class="reset-title">Đặt Lại Mật Khẩu</h1>
            <p class="reset-subtitle">Nhập mật khẩu mới để khôi phục tài khoản của bạn</p>
        </div>

        <!-- Success Message -->
        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@ViewBag.SuccessMessage</span>
            </div>
        }

        <!-- Form -->
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @id = "resetPasswordForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("token", (string)ViewBag.Token)
            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

            <div class="form-section">
                <label class="form-label">
                    <i class="fas fa-lock"></i>
                    Mật khẩu mới
                    <span class="required">*</span>
                </label>
                <div class="password-input-wrapper">
                    <input type="password" 
                           name="newPassword" 
                           class="form-control" 
                           id="newPassword"
                           placeholder="Nhập mật khẩu mới"
                           required />
                    <button type="button" class="toggle-password" data-target="newPassword">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                
                <!-- Password Strength -->
                <div class="password-strength" id="passwordStrength" style="display: none;">
                    <div class="strength-label">Độ mạnh:</div>
                    <div class="strength-bar">
                        <div class="strength-fill" id="strengthFill"></div>
                    </div>
                    <div class="strength-text" id="strengthText"></div>
                </div>
            </div>

            <div class="form-section">
                <label class="form-label">
                    <i class="fas fa-shield-alt"></i>
                    Xác nhận mật khẩu mới
                    <span class="required">*</span>
                </label>
                <div class="password-input-wrapper">
                    <input type="password" 
                           name="confirmPassword" 
                           class="form-control" 
                           id="confirmPassword"
                           placeholder="Nhập lại mật khẩu mới"
                           required />
                    <button type="button" class="toggle-password" data-target="confirmPassword">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <div class="form-hint">
                    <i class="fas fa-info-circle"></i>
                    Nhập lại để xác nhận mật khẩu
                </div>
            </div>

            <!-- Password Requirements -->
            <div class="password-requirements">
                <div class="requirements-title">Yêu cầu mật khẩu:</div>
                <div class="requirement-item" id="req-length">
                    <i class="fas fa-circle"></i>
                    <span>Ít nhất 6 ký tự</span>
                </div>
                <div class="requirement-item" id="req-letter">
                    <i class="fas fa-circle"></i>
                    <span>Có chữ cái</span>
                </div>
                <div class="requirement-item" id="req-number">
                    <i class="fas fa-circle"></i>
                    <span>Có chữ số</span>
                </div>
                <div class="requirement-item" id="req-match">
                    <i class="fas fa-circle"></i>
                    <span>Mật khẩu khớp nhau</span>
                </div>
            </div>

            <button type="submit" class="btn-reset" id="submitBtn">
                <i class="fas fa-check-circle"></i>
                <span id="btnText">Đặt lại mật khẩu</span>
            </button>
        }

        <div class="login-link">
            Nhớ mật khẩu? @Html.ActionLink("Đăng nhập ngay", "Login", "Account")
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('.toggle-password').on('click', function() {
                const targetId = $(this).data('target');
                const input = $('#' + targetId);
                const icon = $(this).find('i');
                
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Password strength checker
            $('#newPassword').on('input', function() {
                const password = $(this).val();
                
                if (password.length > 0) {
                    $('#passwordStrength').show();
                    
                    let strength = 0;
                    if (password.length >= 6) strength++;
                    if (password.length >= 10) strength++;
                    if (/[a-zA-Z]/.test(password)) strength++;
                    if (/[0-9]/.test(password)) strength++;
                    if (/[^a-zA-Z0-9]/.test(password)) strength++;

                    const fill = $('#strengthFill');
                    const text = $('#strengthText');
                    
                    fill.removeClass('strength-weak strength-medium strength-strong');
                    
                    if (strength <= 2) {
                        fill.addClass('strength-weak');
                        text.text('Yếu').css('color', 'var(--danger)');
                    } else if (strength <= 3) {
                        fill.addClass('strength-medium');
                        text.text('Trung bình').css('color', 'var(--warning)');
                    } else {
                        fill.addClass('strength-strong');
                        text.text('Mạnh').css('color', 'var(--success)');
                    }
                } else {
                    $('#passwordStrength').hide();
                }
                
                checkRequirements();
            });

            $('#confirmPassword').on('input', checkRequirements);

            function checkRequirements() {
                const password = $('#newPassword').val();
                const confirm = $('#confirmPassword').val();

                if (password.length >= 6) {
                    $('#req-length').addClass('met');
                } else {
                    $('#req-length').removeClass('met');
                }

                if (/[a-zA-Z]/.test(password)) {
                    $('#req-letter').addClass('met');
                } else {
                    $('#req-letter').removeClass('met');
                }

                if (/[0-9]/.test(password)) {
                    $('#req-number').addClass('met');
                } else {
                    $('#req-number').removeClass('met');
                }

                if (password && confirm && password === confirm) {
                    $('#req-match').addClass('met');
                } else {
                    $('#req-match').removeClass('met');
                }
            }

            // Form validation
            $('#resetPasswordForm').on('submit', function(e) {
                const newPass = $('#newPassword').val();
                const confirm = $('#confirmPassword').val();

                if (!newPass || !confirm) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin!');
                    return false;
                }

                if (newPass.length < 6) {
                    e.preventDefault();
                    alert('Mật khẩu phải có ít nhất 6 ký tự!');
                    return false;
                }

                if (newPass !== confirm) {
                    e.preventDefault();
                    alert('Mật khẩu xác nhận không khớp!');
                    return false;
                }

                // Add loading state
                $('#submitBtn').prop('disabled', true);
                $('#btnText').html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');
            });

            // Auto-hide success message
            setTimeout(() => {
                $('.alert-success').fadeOut(500, function() {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
}
