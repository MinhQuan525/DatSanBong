@model dynamic
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    :root {
        --primary: #2563eb;
        --primary-dark: #1e40af;
        --secondary: #0ea5e9;
        --accent: #06b6d4;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
    }

    /* ===============================================
       CONTAINER
    =============================================== */
    * {
        box-sizing: border-box;
    }

    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-x: hidden;
    }

    body {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        position: relative;
    }

    body::before {
        content: '';
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background-image: 
            radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        animation: float 20s ease-in-out infinite;
        pointer-events: none;
        z-index: 0;
    }

    @@keyframes float {
        0%, 100% { transform: translate(0px, 0px) rotate(0deg); }
        33% { transform: translate(30px, -30px) rotate(120deg); }
        66% { transform: translate(-20px, 20px) rotate(240deg); }
    }

    .forgot-container {
        width: 100%;
        max-width: 500px;
        padding: 20px;
        z-index: 10;
    }

    /* ===============================================
       CARD
    =============================================== */
    .forgot-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        box-shadow:
            0 25px 45px rgba(0, 0, 0, 0.1),
            0 10px 20px rgba(0, 0, 0, 0.05);
        padding: 40px;
        animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(60px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===============================================
       HEADER
    =============================================== */
    .forgot-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .forgot-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: white;
        font-size: 36px;
        box-shadow: 0 8px 24px rgba(37, 99, 235, 0.25);
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .forgot-title {
        color: #1e293b;
        font-weight: 800;
        font-size: 1.75rem;
        margin: 0 0 8px 0;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .forgot-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
        margin: 0;
        line-height: 1.6;
    }

    /* ===============================================
       INFO BOX
    =============================================== */
    .info-box {
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(14, 165, 233, 0.05));
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 24px;
        border-left: 4px solid var(--primary);
    }

    .info-box-content {
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .info-box-icon {
        color: var(--primary);
        font-size: 1.25rem;
        margin-top: 2px;
    }

    .info-box-text {
        flex: 1;
    }

    .info-box-title {
        font-weight: 700;
        color: #1e293b;
        font-size: 0.9375rem;
        margin-bottom: 4px;
    }

    .info-box-desc {
        color: #64748b;
        font-size: 0.875rem;
        line-height: 1.6;
    }

    /* ===============================================
       FORM
    =============================================== */
    .form-section {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        color: #475569;
        font-weight: 600;
        font-size: 0.9375rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-label i {
        color: var(--primary);
    }

    .form-label .required {
        color: var(--danger);
    }

    .email-input-wrapper {
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 14px 48px 14px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 0.9375rem;
        background: #f8fafc;
        transition: all 0.3s ease;
        outline: none;
    }

    .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        background: white;
    }

    .form-control::placeholder {
        color: #94a3b8;
    }

    .input-icon {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        font-size: 1.125rem;
        pointer-events: none;
    }

    .form-control:focus ~ .input-icon {
        color: var(--primary);
    }

    .form-hint {
        font-size: 0.8125rem;
        color: #94a3b8;
        margin-top: 6px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .form-hint i {
        color: var(--warning);
    }

    /* ===============================================
       BUTTONS
    =============================================== */
    .btn-submit {
        width: 100%;
        padding: 16px 24px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 24px 0 16px 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 99, 235, 0.35);
    }

    .btn-submit:active {
        transform: translateY(0);
    }

    .btn-submit:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .back-link {
        text-align: center;
        margin-top: 16px;
    }

    .back-link a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 700;
        font-size: 0.9375rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .back-link a:hover {
        color: var(--secondary);
        transform: translateX(-4px);
    }

    /* ===============================================
       ALERTS
    =============================================== */
    .alert {
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
        border: none;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: slideInDown 0.4s ease-out;
    }

    .alert i {
        font-size: 1.25rem;
    }

    .alert-info {
        background: rgba(37, 99, 235, 0.1);
        color: #1e40af;
        border-left: 4px solid var(--primary);
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #065f46;
        border-left: 4px solid var(--success);
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border-left: 4px solid var(--danger);
        color: #991b1b;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 20px;
    }

    .validation-summary-errors li {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .text-danger {
        color: var(--danger);
        font-size: 0.8125rem;
        margin-top: 6px;
        font-weight: 600;
    }

    /* ===============================================
       STEPS
    =============================================== */
    .steps-list {
        margin-top: 24px;
        padding: 20px;
        background: #f8fafc;
        border-radius: 12px;
    }

    .steps-title {
        font-size: 0.875rem;
        font-weight: 700;
        color: #475569;
        margin-bottom: 12px;
    }

    .step-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 12px;
        font-size: 0.875rem;
        color: #64748b;
    }

    .step-item:last-child {
        margin-bottom: 0;
    }

    .step-number {
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.75rem;
        flex-shrink: 0;
    }

    /* ===============================================
       RESPONSIVE
    =============================================== */
    @@media (max-width: 540px) {
        .forgot-container {
            padding: 15px;
        }

        .forgot-card {
            padding: 30px 24px;
        }

        .forgot-title {
            font-size: 1.5rem;
        }

        .forgot-icon {
            width: 70px;
            height: 70px;
            font-size: 32px;
        }
    }
</style>

<div class="forgot-container">
    <div class="forgot-card">
        <!-- Header -->
        <div class="forgot-header">
            <div class="forgot-icon">
                <i class="fas fa-question-circle"></i>
            </div>
            <h1 class="forgot-title">Quên Mật Khẩu?</h1>
            <p class="forgot-subtitle">Đừng lo lắng! Chúng tôi sẽ giúp bạn khôi phục tài khoản</p>
        </div>

        <!-- Info Box -->
        <div class="info-box">
            <div class="info-box-content">
                <i class="fas fa-info-circle info-box-icon"></i>
                <div class="info-box-text">
                    <div class="info-box-title">Cách thức hoạt động</div>
                    <div class="info-box-desc">
                        Nhập email đã đăng ký. Chúng tôi sẽ gửi liên kết đặt lại mật khẩu đến hộp thư của bạn.
                    </div>
                </div>
            </div>
        </div>

        <!-- Success/Info Message -->
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@ViewBag.Message</span>
            </div>
        }

        <!-- Form -->
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "forgotPasswordForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

            <div class="form-section">
                <label class="form-label">
                    <i class="fas fa-envelope"></i>
                    Địa chỉ Email
                    <span class="required">*</span>
                </label>
                <div class="email-input-wrapper">
                    <input type="email" 
                           name="email" 
                           class="form-control" 
                           id="email"
                           placeholder="Nhập email đã đăng ký"
                           required 
                           autocomplete="email" />
                    <i class="fas fa-at input-icon"></i>
                </div>
                <div class="form-hint">
                    <i class="fas fa-info-circle"></i>
                    Email bạn đã sử dụng khi đăng ký tài khoản
                </div>
            </div>

            <button type="submit" class="btn-submit" id="submitBtn">
                <i class="fas fa-paper-plane"></i>
                <span id="btnText">Gửi yêu cầu</span>
            </button>
        }

        <!-- Steps -->
        <div class="steps-list">
            <div class="steps-title">Các bước tiếp theo:</div>
            <div class="step-item">
                <div class="step-number">1</div>
                <div>Kiểm tra hộp thư email của bạn</div>
            </div>
            <div class="step-item">
                <div class="step-number">2</div>
                <div>Mở email và nhấp vào liên kết đặt lại mật khẩu</div>
            </div>
            <div class="step-item">
                <div class="step-number">3</div>
                <div>Tạo mật khẩu mới và đăng nhập</div>
            </div>
        </div>

        <!-- Back Link -->
        <div class="back-link">
            @Html.ActionLink("Quay lại đăng nhập", "Login", "Account", null, new { })
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            // Email validation
            $('#forgotPasswordForm').on('submit', function(e) {
                const email = $('#email').val().trim();

                if (!email) {
                    e.preventDefault();
                    alert('Vui lòng nhập địa chỉ email!');
                    return false;
                }

                // Email format validation
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                if (!emailRegex.test(email)) {
                    e.preventDefault();
                    alert('Email không hợp lệ! Vui lòng kiểm tra lại.');
                    return false;
                }

                // Add loading state
                $('#submitBtn').prop('disabled', true);
                $('#btnText').html('<i class="fas fa-spinner fa-spin"></i> Đang gửi...');
            });

            // Auto-hide success message
            setTimeout(() => {
                $('.alert-success').fadeOut(500, function() {
                    $(this).remove();
                });
            }, 10000); // 10 seconds for forgot password confirmation
        });
    </script>
}
