@model IEnumerable<DatSanBong.Models.SanBong>
@{
    ViewBag.Title = "Quản lý sân bóng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary: #2563eb;
        --secondary: #0ea5e9;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
    }

    .page-header {
        margin-bottom: 32px;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .btn-add {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 99, 235, 0.35);
        color: white;
        text-decoration: none;
    }

    .alert {
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
        border: none;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: slideInDown 0.4s ease-out;
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert i {
        font-size: 1.25rem;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #065f46;
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #991b1b;
        border-left: 4px solid var(--danger);
    }

    .table-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .table-container {
        overflow-x: auto;
    }

    .table {
        margin: 0;
        width: 100%;
    }

    .table thead {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
    }

    .table thead th {
        color: white;
        font-weight: 700;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 16px 12px;
        border: none;
        white-space: nowrap;
    }

    .table tbody tr {
        border-bottom: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background: #f8fafc;
        transform: scale(1.01);
    }

    .table tbody tr:last-child {
        border-bottom: none;
    }

    .table tbody td {
        padding: 16px 12px;
        vertical-align: middle;
        color: #475569;
        font-size: 0.9375rem;
    }

    .field-name {
        font-weight: 700;
        color: #1e293b;
    }

    .field-address {
        font-size: 0.875rem;
        color: #64748b;
    }

    .field-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .badge {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.8125rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .badge-success {
        background: rgba(16, 185, 129, 0.1);
        color: #065f46;
    }

    .badge-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #991b1b;
    }

    .badge-warning {
        background: rgba(245, 158, 11, 0.1);
        color: #92400e;
    }

    .price {
        font-weight: 700;
        color: var(--success);
    }

    .rating {
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 600;
    }

    .rating i {
        color: #fbbf24;
    }

    .rating-count {
        font-size: 0.875rem;
        color: #64748b;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-edit {
        background: rgba(245, 158, 11, 0.1);
        color: #92400e;
    }

    .btn-edit:hover {
        background: var(--warning);
        color: white;
        transform: translateY(-2px);
        text-decoration: none;
    }

    .btn-delete {
        background: rgba(239, 68, 68, 0.1);
        color: #991b1b;
    }

    .btn-delete:hover {
        background: var(--danger);
        color: white;
        transform: translateY(-2px);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #64748b;
    }

    .empty-state i {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-state h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 8px;
    }

    @@media (max-width: 768px) {
        .header-actions {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .table thead {
            display: none;
        }

        .table tbody tr {
            display: block;
            margin-bottom: 16px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 16px;
        }

        .table tbody td {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border: none;
        }

        .table tbody td::before {
            content: attr(data-label);
            font-weight: 700;
            color: #1e293b;
        }

        .action-buttons {
            width: 100%;
        }

        .btn-action {
            flex: 1;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-futbol"></i>
        Quản Lý Sân Bóng
    </h1>
    <p class="page-subtitle">Quản lý thông tin và trạng thái các sân bóng trong hệ thống</p>
</div>

<div class="header-actions">
    <div></div>
    @Html.ActionLink("Thêm sân bóng mới", "CreateField", null, new { @class = "btn-add" })
    <i class="fas fa-plus-circle"></i>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-circle"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-card">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ảnh</th>
                        <th>Tên Sân</th>
                        <th>Địa Chỉ</th>
                        <th>Loại Sân</th>
                        <th>Giá Thuê</th>
                        <th>Trạng Thái</th>
                        <th>Đánh Giá</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="ID">
                                <span class="field-name">#@item.IDSanBong</span>
                            </td>
                            <td data-label="Ảnh">
                                @if (!string.IsNullOrEmpty(item.AnhSan))
                                {
                                    <img src="@Url.Content("~/Content/Images/" + item.AnhSan)" alt="@item.TenSanBong" class="field-image" />
                                }
                                else
                                {
                                    <div class="field-image" style="background: #e2e8f0; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-image" style="color: #94a3b8;"></i>
                                    </div>
                                }
                            </td>
                            <td data-label="Tên Sân">
                                <div class="field-name">@item.TenSanBong</div>
                            </td>
                            <td data-label="Địa Chỉ">
                                <div class="field-address">@item.DiaChi</div>
                            </td>
                            <td data-label="Loại Sân">
                                <span class="badge badge-warning">
                                    <i class="fas fa-layer-group"></i>
                                    @item.LoaiSanBong.LoaiSan
                                </span>
                            </td>
                            <td data-label="Giá Thuê">
                                <span class="price">@item.GiaThue.ToString("N0") ₫</span>
                                <div style="font-size: 0.75rem; color: #94a3b8;">/giờ</div>
                            </td>
                            <td data-label="Trạng Thái">
                                @if (item.TrangThaiSan_)
                                {
                                    <span class="badge badge-success">
                                        <i class="fas fa-check-circle"></i>
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">
                                        <i class="fas fa-times-circle"></i>
                                        Tạm dừng
                                    </span>
                                }
                            </td>
                            <td data-label="Đánh Giá">
                                <div class="rating">
                                    <i class="fas fa-star"></i>
                                    @item.AverageDanhGia.ToString("F1")
                                    <span class="rating-count">(@item.TongLuotDanhGia)</span>
                                </div>
                            </td>
                            <td data-label="Thao Tác">
                                <div class="action-buttons">
                                    <a href="@Url.Action("EditField", new { id = item.IDSanBong })" class="btn-action btn-edit" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @using (Html.BeginForm("DeleteField", "Admin", new { id = item.IDSanBong }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Bạn có chắc chắn muốn xóa sân bóng này?');" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-action btn-delete" title="Xóa">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="table-card">
        <div class="empty-state">
            <i class="fas fa-futbol"></i>
            <h3>Chưa có sân bóng nào</h3>
            <p>Hãy thêm sân bóng mới để bắt đầu quản lý</p>
            @Html.ActionLink("Thêm sân bóng", "CreateField", null, new { @class = "btn-add" })
            <i class="fas fa-plus-circle"></i>
        </div>
    </div>
}
