@model IEnumerable<DatSanBong.Models.DonDatSan>
@{
    ViewBag.Title = "Quản lý đơn đặt sân";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary: #2563eb;
        --secondary: #0ea5e9;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #3b82f6;
    }

    .page-header {
        margin-bottom: 32px;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
    }

    .filter-section {
        background: white;
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .filter-title {
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .filter-title i {
        color: var(--primary);
    }

    .form-select {
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 0.9375rem;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

    .form-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        background: white;
        outline: none;
    }

    .btn-clear {
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .btn-clear:hover {
        background: #f8fafc;
        border-color: var(--primary);
        color: var(--primary);
        text-decoration: none;
    }

    .alert {
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
        border: none;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: slideInDown 0.4s ease-out;
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert i {
        font-size: 1.25rem;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: #065f46;
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #991b1b;
        border-left: 4px solid var(--danger);
    }

    .table-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .table-container {
        overflow-x: auto;
    }

    .table {
        margin: 0;
        width: 100%;
    }

    .table thead {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
    }

    .table thead th {
        color: white;
        font-weight: 700;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 16px 12px;
        border: none;
        white-space: nowrap;
    }

    .table tbody tr {
        border-bottom: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .table tbody tr:last-child {
        border-bottom: none;
    }

    .table tbody td {
        padding: 16px 12px;
        vertical-align: middle;
        color: #475569;
        font-size: 0.9375rem;
    }

    .booking-id {
        font-weight: 700;
        color: #1e293b;
    }

    .time-slot {
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 600;
    }

    .time-slot i {
        color: var(--primary);
    }

    .price {
        font-weight: 700;
        color: var(--success);
    }

    .badge {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.8125rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
    }

    .badge-success {
        background: rgba(16, 185, 129, 0.1);
        color: #065f46;
    }

    .badge-warning {
        background: rgba(245, 158, 11, 0.1);
        color: #92400e;
    }

    .badge-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #991b1b;
    }

    .badge-info {
        background: rgba(59, 130, 246, 0.1);
        color: #1e40af;
    }

    .badge-secondary {
        background: rgba(100, 116, 139, 0.1);
        color: #475569;
    }

    .btn-details {
        background: rgba(59, 130, 246, 0.1);
        color: #1e40af;
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.3s ease;
    }

    .btn-details:hover {
        background: var(--info);
        color: white;
        transform: translateY(-2px);
        text-decoration: none;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #64748b;
    }

    .empty-state i {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-state h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 8px;
    }

    @@media (max-width: 768px) {
        .table thead {
            display: none;
        }

        .table tbody tr {
            display: block;
            margin-bottom: 16px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 16px;
        }

        .table tbody td {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border: none;
        }

        .table tbody td::before {
            content: attr(data-label);
            font-weight: 700;
            color: #1e293b;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-calendar-check"></i>
        Quản Lý Đơn Đặt Sân
    </h1>
    <p class="page-subtitle">Xem và quản lý tất cả các đơn đặt sân trong hệ thống</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-circle"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

<div class="filter-section">
    @using (Html.BeginForm("Bookings", "Admin", FormMethod.Get, new { @class = "row g-3 align-items-end" }))
    {
        <div class="col-12">
            <div class="filter-title">
                <i class="fas fa-filter"></i>
                Bộ lọc
            </div>
        </div>
        <div class="col-md-4">
            <label for="statusFilter" class="form-label" style="font-weight: 600; color: #475569;">Lọc theo trạng thái:</label>
            @Html.DropDownList("statusFilter", (SelectList)ViewBag.StatusList, "Tất cả trạng thái", new { @class = "form-select", onchange = "this.form.submit();" })
        </div>
        <div class="col-md-auto">
            @Html.ActionLink("Xóa bộ lọc", "Bookings", null, new { @class = "btn-clear" })
            <i class="fas fa-times"></i>
        </div>
    }
</div>

@if (Model != null && Model.Any())
{
    <div class="table-card">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Người Đặt</th>
                        <th>Sân Bóng</th>
                        <th>Ngày Đặt</th>
                        <th>Thời Gian</th>
                        <th>Tổng Tiền</th>
                        <th>TT Thanh Toán</th>
                        <th>TT Đơn</th>
                        <th>Ngày Tạo</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="ID">
                                <span class="booking-id">#@item.IDBooking</span>
                            </td>
                            <td data-label="Người Đặt">
                                <div style="font-weight: 600;">@item.NguoiDung.fullname</div>
                                <div style="font-size: 0.875rem; color: #64748b;">@item.NguoiDung.email</div>
                            </td>
                            <td data-label="Sân Bóng">
                                <div style="font-weight: 600; color: #1e293b;">@item.SanBong.TenSanBong</div>
                            </td>
                            <td data-label="Ngày Đặt">
                                <div style="font-weight: 600;">
                                    <i class="fas fa-calendar" style="color: #94a3b8; margin-right: 6px;"></i>
                                    @item.NgayBooking.ToString("dd/MM/yyyy")
                                </div>
                            </td>
                            <td data-label="Thời Gian">
                                <div class="time-slot">
                                    <i class="fas fa-clock"></i>
                                    @item.start_time.ToString(@"hh\:mm") - @item.end_time.ToString(@"hh\:mm")
                                </div>
                            </td>
                            <td data-label="Tổng Tiền">
                                <div class="price">@item.TongTien.ToString("N0") ₫</div>
                            </td>
                            <td data-label="TT Thanh Toán">
                                @if (item.TTThanhToan)
                                {
                                    <span class="badge badge-success">
                                        <i class="fas fa-check-circle"></i>
                                        Đã TT
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">
                                        <i class="fas fa-clock"></i>
                                        Chưa TT
                                    </span>
                                }
                            </td>
                            <td data-label="TT Đơn">
                                @{
                                    var statusName = item.TrangThaiDonDat.Tenstatus;
                                    var badgeClass = "badge-secondary";

                                    if (statusName == "Chờ duyệt")
                                    {
                                        badgeClass = "badge-warning";
                                    }
                                    else if (statusName == "Đã duyệt")
                                    {
                                        badgeClass = "badge-info";
                                    }
                                    else if (statusName == "Hoàn thành")
                                    {
                                        badgeClass = "badge-success";
                                    }
                                    else if (statusName == "Đã hủy")
                                    {
                                        badgeClass = "badge-danger";
                                    }
                                }
                                <span class="badge @badgeClass">
                                    @statusName
                                </span>
                            </td>
                            <td data-label="Ngày Tạo">
                                <div style="font-size: 0.875rem;">@item.created_at.ToString("dd/MM/yyyy")</div>
                                <div style="font-size: 0.8125rem; color: #64748b;">@item.created_at.ToString("HH:mm")</div>
                            </td>
                            <td data-label="Thao Tác">
                                <a href="@Url.Action("BookingDetails", new { id = item.IDBooking })" class="btn-details" title="Chi tiết">
                                    <i class="fas fa-eye"></i>
                                    Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="table-card">
        <div class="empty-state">
            <i class="fas fa-calendar-times"></i>
            <h3>Chưa có đơn đặt sân nào</h3>
            <p>Không tìm thấy đơn đặt sân với bộ lọc hiện tại</p>
            @Html.ActionLink("Xóa bộ lọc", "Bookings", null, new { @class = "btn-clear" })
            <i class="fas fa-times"></i>
        </div>
    </div>
}
