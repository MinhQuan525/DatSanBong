@model DatSanBong.Models.PhanCongNhanVien
@{
    ViewBag.Title = "Tạo phân công mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary: #2563eb;
        --secondary: #0ea5e9;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
    }

    .create-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 32px;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-subtitle {
        color: #64748b;
        font-size: 0.9375rem;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        padding: 32px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .section-title {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 2px solid #e2e8f0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-title i {
        color: var(--primary);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #475569;
        margin-bottom: 8px;
        font-size: 0.9375rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-label i {
        color: var(--primary);
    }

    .form-label .required {
        color: var(--danger);
        margin-left: 4px;
    }

    .form-control,
    .form-select {
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 0.9375rem;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        background: white;
        outline: none;
    }

    .form-control::placeholder {
        color: #94a3b8;
    }

    textarea.form-control {
        resize: vertical;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 2px solid #e2e8f0;
    }

    .btn-action {
        padding: 12px 28px;
        border-radius: 10px;
        font-weight: 700;
        font-size: 0.9375rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        flex: 1;
        justify-content: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 99, 235, 0.35);
        color: white;
    }

    .btn-secondary {
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
    }

    .btn-secondary:hover {
        background: #f8fafc;
        border-color: var(--primary);
        color: var(--primary);
        text-decoration: none;
    }

    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border-left: 4px solid var(--danger);
        color: #991b1b;
        border-radius: 10px;
        padding: 16px 20px;
        margin-bottom: 24px;
    }

    .text-danger {
        color: var(--danger);
        font-size: 0.8125rem;
        margin-top: 6px;
        font-weight: 600;
    }

    .info-box {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.05), rgba(251, 191, 36, 0.05));
        border-left: 4px solid var(--warning);
        border-radius: 10px;
        padding: 16px;
        margin-bottom: 24px;
    }

    .info-box-title {
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .info-box-title i {
        color: var(--warning);
    }

    .info-box-list {
        margin: 0;
        padding-left: 20px;
        color: #64748b;
        font-size: 0.875rem;
    }

    .info-box-list li {
        margin-bottom: 4px;
    }
</style>

<div class="create-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-user-tie"></i>
            Tạo Phân Công Mới
        </h1>
        <p class="page-subtitle">Phân công nhân viên quản lý sân bóng</p>
    </div>

    <!-- Form Card -->
    <div class="form-card">
        @using (Html.BeginForm("CreateAssignment", "Admin", FormMethod.Post, new { @id = "createAssignmentForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

            <!-- Info Box -->
            <div class="info-box">
                <div class="info-box-title">
                    <i class="fas fa-info-circle"></i>
                    Hướng dẫn phân công
                </div>
                <ul class="info-box-list">
                    <li>Chọn nhân viên và sân bóng cần phân công</li>
                    <li>Đặt ngày phân công và mô tả nhiệm vụ cụ thể</li>
                    <li>Nhân viên sẽ nhận thông báo sau khi phân công</li>
                    <li>Có thể chỉnh sửa hoặc hủy phân công sau</li>
                </ul>
            </div>

            <!-- Assignment Info Section -->
            <div class="section-title">
                <i class="fas fa-calendar-alt"></i>
                Thông Tin Phân Công
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-calendar-day"></i>
                            Ngày phân công
                            <span class="required">*</span>
                        </label>
                        @Html.TextBoxFor(model => model.NgayPhanCong, "{0:yyyy-MM-dd}", new { 
                            @class = "form-control", 
                            type = "date", 
                            required = "required",
                            min = DateTime.Today.ToString("yyyy-MM-dd")
                        })
                        @Html.ValidationMessageFor(model => model.NgayPhanCong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user"></i>
                            Nhân viên
                            <span class="required">*</span>
                        </label>
                        @Html.DropDownListFor(model => model.IDuser, (SelectList)ViewBag.IDuser, "--- Chọn nhân viên ---", new { @class = "form-select", required = "required" })
                        @Html.ValidationMessageFor(model => model.IDuser, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-futbol"></i>
                    Sân bóng
                    <span class="required">*</span>
                </label>
                @Html.DropDownListFor(model => model.IDSanBong, (SelectList)ViewBag.IDSanBong, "--- Chọn sân bóng ---", new { @class = "form-select", required = "required" })
                @Html.ValidationMessageFor(model => model.IDSanBong, "", new { @class = "text-danger" })
            </div>

            <!-- Task Details Section -->
            <div class="section-title" style="margin-top: 32px;">
                <i class="fas fa-clipboard-list"></i>
                Chi Tiết Nhiệm Vụ
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-align-left"></i>
                    Chi tiết phân công
                </label>
                @Html.TextAreaFor(model => model.ChiTiet, new { 
                    @class = "form-control", 
                    rows = 6,
                    placeholder = "Mô tả chi tiết nhiệm vụ, trách nhiệm và yêu cầu cụ thể cho nhân viên..."
                })
                @Html.ValidationMessageFor(model => model.ChiTiet, "", new { @class = "text-danger" })
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button type="submit" class="btn-action btn-primary">
                    <i class="fas fa-check-circle"></i>
                    Tạo phân công
                </button>
                @Html.ActionLink("Hủy bỏ", "StaffAssignments", null, new { @class = "btn-action btn-secondary" })
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            // Set default date to today
            const today = new Date().toISOString().split('T')[0];
            if (!$('input[type="date"]').val()) {
                $('input[type="date"]').val(today);
            }

            // Form validation
            $('#createAssignmentForm').on('submit', function(e) {
                const employee = $('select[name="IDuser"]').val();
                const field = $('select[name="IDSanBong"]').val();
                const date = $('input[type="date"]').val();

                if (!employee || !field || !date) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                    return false;
                }

                // Check if date is not in the past
                if (new Date(date) < new Date().setHours(0,0,0,0)) {
                    e.preventDefault();
                    alert('Ngày phân công không được là ngày trong quá khứ!');
                    return false;
                }
            });
        });
    </script>
}
