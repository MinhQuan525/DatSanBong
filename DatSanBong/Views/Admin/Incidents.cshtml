@model IEnumerable<DatSanBong.Models.SuCo>
@{
    ViewBag.Title = "Quản lý báo cáo sự cố";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý báo cáo sự cố</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Loại sự cố</th>
            <th>Người báo cáo</th>
            <th>Sân liên quan</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th>Ngày báo cáo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDSuCo</td>
                <td>@item.LoaiSuCo</td>
                <td>@(item.NguoiDung?.fullname ?? item.user_backup_info ?? "N/A")</td>
                <td>@(item.SanBong?.TenSanBong ?? item.sanBong_backup_info ?? "N/A")</td>
                <td>@item.MoTa</td>
                <td>@item.TrangThai</td>
                <td>@item.reported_at.Value.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @Html.ActionLink("Chi tiết", "IncidentDetails", new { id = item.IDSuCo }, new { @class = "btn btn-sm btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
