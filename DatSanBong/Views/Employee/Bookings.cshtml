@model IEnumerable<DatSanBong.Models.DonDatSan>
@{
    ViewBag.Title = "Quản lý đơn đặt sân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        text-align: center;
        color: #007acc;
        font-weight: 600;
        margin-bottom: 30px;
    }

    .table {
        font-size: 0.95rem;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.05);
    }

        .table thead {
            background-color: #007acc;
            color: #ffffff;
        }

            .table thead th {
                padding: 12px;
                font-weight: 600;
                border-bottom: none;
                white-space: nowrap;
            }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .table td {
        padding: 10px 12px;
        vertical-align: middle;
        color: #333;
    }

    .table tbody tr:hover {
        background-color: #e3f2fd;
        cursor: pointer;
    }

    .btn-sm.btn-info {
        font-size: 0.85rem;
        border-radius: 6px;
        padding: 6px 10px;
        background-color: #17a2b8;
        border: none;
    }

    .alert-success,
    .alert-danger {
        border-radius: 8px;
        padding: 15px;
        font-size: 0.95rem;
        margin-bottom: 20px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    .form-label {
        font-weight: 500;
        color: #444;
    }

    .form-select {
        border-radius: 6px;
        border: 1px solid #ccc;
        box-shadow: none;
    }

    .btn-secondary {
        border-radius: 6px;
        padding: 8px 14px;
        font-weight: 500;
    }

</style>
<h2>Quản lý đơn đặt sân</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@using (Html.BeginForm("Bookings", "Employee", FormMethod.Get, new { @class = "mb-3" }))
{
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label for="statusFilter" class="form-label">Lọc theo trạng thái:</label>
            @Html.DropDownList("statusFilter", (SelectList)ViewBag.StatusList, "Tất cả trạng thái", new { @class = "form-select", onchange = "this.form.submit();" })
        </div>
        <div class="col-md-auto">
            @Html.ActionLink("Xóa bộ lọc", "Bookings", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Người đặt</th>
            <th>Sân bóng</th>
            <th>Ngày đặt</th>
            <th>Thời gian</th>
            <th>Tổng tiền</th>
            <th>Trạng thái TT</th>
            <th>Trạng thái đơn</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDBooking</td>
                <td>@item.NguoiDung.fullname</td>
                <td>@item.SanBong.TenSanBong</td>
                <td>@item.NgayBooking.ToString("dd/MM/yyyy")</td>
                <td>@item.start_time.ToString(@"hh\:mm") - @item.end_time.ToString(@"hh\:mm")</td>
                <td>@item.TongTien.ToString("N0") VNĐ</td>
                <td>@(item.TTThanhToan ? "Đã TT" : "Chưa TT")</td>
                <td>@item.TrangThaiDonDat.Tenstatus</td>
                <td>@item.created_at.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @Html.ActionLink("Chi tiết", "BookingDetails", new { id = item.IDBooking }, new { @class = "btn btn-sm btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
